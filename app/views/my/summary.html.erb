<div id="search_condition">
<%= @my.name %>のアクティビティ
</div>

<div class="outside">
<h2><%= image_tag(@my.image, :size => '50x50') %></h2>
</div>

<%= render(:partial => 'block', :locals => {
  :block_partial    => 'layouts/seen',
  :block_link       => search_path(:search => {:narrow => :wish}),
  :block_items      => @wish_seen,
  :block_title      => '見たい映画',
  :block_limit      => 3
}) -%>

<%= render(:partial => 'block', :locals => {
  :block_partial    => 'layouts/seen',
  :block_link       => search_path,
  :block_items      => @recently_seen,
  :block_title      => '最近見た映画',
  :block_limit      => 3
}) -%>

<%= render(:partial => 'block', :locals => {
  :block_partial    => 'ranking/display',
  :block_link       => ranking_movie_path,
  :block_items      => @weekly_ranking[:weekly_movie],
  :block_title      => '最近見られている映画',
  :block_limit      => 3
}) -%>

<%= render(:partial => 'block', :locals => {
  :block_partial    => 'ranking/display',
  :block_link       => ranking_wish_path,
  :block_items      => @wishs_ranking[:wishs],
  :block_title      => '見たい映画ランキング',
  :block_limit      => 3
}) -%>

<% unless @recommend_users.blank? -%>
<div class="title_name">
<span class="title_name_main">おすすめユーザ</span>
</div>
<div class="recommend_user">
<% @recommend_users.each do |user| -%>
<%= link_to "/search/?search[author]=#{user[:id]}" do %><span class="linkable">›</span><span><%= user[:name] %></span><% end %>
<% end -%>
</div>
<% end -%>
